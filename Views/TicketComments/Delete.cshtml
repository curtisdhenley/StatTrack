@model StatTracker.Models.TicketComment

@{
    ViewData["Title"] = "Delete";
}

<div class="card px-3 py-2 w-50 align-items-center">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this comment?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Comment)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Created)
            <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ticket)
            </dt>
            <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ticket!.Description)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Tickets" asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
